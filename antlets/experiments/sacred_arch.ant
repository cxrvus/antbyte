set size = 128;
set border = wrap;
set colors = rgb;

fn langton = () => () {
	left = C0;
	right = -C0;

	CC = 1;
	C0 = -C0;
	C1 = C1;

	D0 = or(left, right);
	D2 = left;
}

ant main {
	() = langton();

	A1 = -or(T1, T0);
	C1 = OBS;
	DIE = and(T1, T2, M0, OBS);
	M0 = OBS;
}

ant clone = 2 {
	() = langton();
	DIE = OBS;
}
