set size = 128;
set border = cycle;
set colors = rgb;

fn langton = () => () {
	left = C1;
	right = -C1;

	CC = 1;
	C1 = -C1;
	
	C0 = C0;
	C2 = C2;

	D0 = or(left, right);
	D2 = left;
}

ant main {
	() = langton();

	C2 = 1;

	special = and(R2, R1, R0);
	CC = special;
	C0 = special;

	A1 = -or(T1, T0);
}

ant clone = 2 {
	() = langton();
	DIE = and(T4, T3, T2, T1, T0);
}
